<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav>
        <ul>
            {% if app.user %}
            <li>
                <a href="{{ path('logout') }}">Logout</a>
            </li>
            {% else %}
            <li>
                <a href="{{ path('register') }}">Register</a>
            </li>
            <li>
                <a href="{{ path('login') }}">Login</a>
            </li>
            {% endif %}
        </ul>
    </nav>

    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
</body>
</html>
